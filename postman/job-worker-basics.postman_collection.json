{
  "info": {
    "name": "Job & Profile Basics",
    "description": "Minimal Postman collection to create a job and fetch employer/worker profile details.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": {
      "major": 1,
      "minor": 0,
      "patch": 0
    }
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "authToken",
      "value": ""
    },
    {
      "key": "businessId",
      "value": ""
    },
    {
      "key": "workerId",
      "value": ""
    },
    {
      "key": "applicationId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"businessId\": \"{{businessId}}\",\n  \"title\": \"Front Desk Associate\",\n  \"description\": \"Greet guests, manage reservations, and handle check-in/out tasks.\",\n  \"hourlyRate\": 18,\n  \"schedule\": {\n    \"startDate\": \"2024-10-01\",\n    \"endDate\": \"2024-12-31\",\n    \"startTime\": \"09:00\",\n    \"endTime\": \"17:00\",\n    \"recurrence\": \"weekly\",\n    \"workDays\": [\"monday\", \"wednesday\", \"friday\"]\n  },\n  \"tags\": [\"front-desk\", \"hospitality\"],\n  \"verificationRequired\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/jobs",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "jobs"
              ]
            },
            "description": "Create a job posting for the selected business. Requires an employer token with the `create_jobs` permission. Leave the `location` out to let the API auto-fill it from the business record."
          },
          "response": []
        },
        {
          "name": "Hire Applicant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"startDate\": \"2024-10-15T09:00:00.000Z\",\n  \"hiringNotes\": \"Starting next Tuesday at 9 AM\",\n  \"businessId\": \"{{businessId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/jobs/applications/{{applicationId}}/hire",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "jobs",
                "applications",
                "{{applicationId}}",
                "hire"
              ]
            },
            "description": "Mark an application as hired. Requires employer credentials with the `hire_workers` permission. Optionally include `startDate` (ISO 8601) and `hiringNotes`. If your account manages multiple businesses, pass `businessId` or set the `x-business-id` header to satisfy access checks."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Employers",
      "item": [
        {
          "name": "Get My Employer Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/employers/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "employers",
                "me"
              ]
            },
            "description": "Fetch the authenticated employer's profile details. Use a valid employer access token."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Workers",
      "item": [
        {
          "name": "Get Worker Profile (by ID)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/workers/{{workerId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "workers",
                "{{workerId}}"
              ]
            },
            "description": "Fetch a worker's profile by their user ID. The token must allow access to worker details."
          },
          "response": []
        },
        {
          "name": "Get My Worker Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/workers/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "workers",
                "me"
              ]
            },
            "description": "Fetch the authenticated worker's profile details."
          },
          "response": []
        }
      ]
    }
  ]
}
